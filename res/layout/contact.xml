<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#15060b" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d0ad85" >
            
        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:background="#15060b"
	            android:layout_margin="8dp"
	            android:padding="8dp" >

            <TextView
                android:id="@+id/option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select option"
                android:layout_gravity="center"
                android:textColor="#d0ad85"
                android:textSize="20sp"
                android:paddingBottom="5dp"
                android:visibility="gone" />
	            
            	<LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#d0ad85"/>
                
                <TextView
                    android:id="@+id/contact1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#302b31"
                    android:textColor="#d0ad85"
                    android:textSize="18sp" />
                <LinearLayout 
                     android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#d0ad85"
                    android:orientation="vertical"
                    />
                
                <TextView
                    android:id="@+id/contact2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#302b31"
                    android:textColor="#d0ad85"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/linear2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#d0ad85"
                    />
                
                <TextView
                    android:id="@+id/contact3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#302b31"
                    android:textColor="#d0ad85"
                    android:textSize="18sp" />
                
                <LinearLayout 
                    android:id="@+id/linear3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#d0ad85"/>
                
                <TextView
                    android:id="@+id/contact4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#302b31"
                    android:textColor="#d0ad85"
                    android:textSize="18sp" />
                
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#d0ad85"/>
                
                <TextView
                    android:id="@+id/contact5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#302b31"
                    android:textColor="#d0ad85"
                    android:textSize="18sp" />
                
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#d0ad85"/>
                
                <TextView
                    android:id="@+id/contact6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#302b31"
                    android:textColor="#d0ad85"
                    android:textSize="18sp"
                    android:visibility="gone" />
            
        </LinearLayout>
        
    </FrameLayout>
    
</LinearLayout>

</ScrollView>